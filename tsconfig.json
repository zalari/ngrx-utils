{
  "compilerOptions": {
    "target": "es5",
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "lib": [
      "es2015"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "typings.d.ts",
    "src/polyfills.ts",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
